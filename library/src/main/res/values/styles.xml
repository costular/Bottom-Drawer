<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="BottomNavigationDrawer" parent="@style/Theme.Design.BottomSheetDialog">
		<item name="colorBackground">@color/colorDarkBackground</item>
		<item name="rippleColor">#42000000</item>
		<item name="android:windowIsFloating">false</item>
		<item name="bottomSheetStyle">@style/BaseBottomSheet</item>
		<item name="colorIcon">@color/colorIconDark</item>

		<item name="colorSelected">@color/colorSelected</item>
		<item name="colorSelectedLight">@color/colorSelectedLight</item>
		<item name="textAppearanceBottomDrawerTitle">@style/TextAppearance.Drawer.Item.Title</item>
	</style>

	<style name="BottomNavigationDrawer.Light" parent="@style/Theme.Design.Light.BottomSheetDialog">
		<item name="colorBackground">@color/colorLightBackground</item>
		<item name="rippleColor">#42FFFFFF</item>
		<item name="android:windowIsFloating">false</item>
		<item name="bottomSheetStyle">@style/BaseBottomSheet</item>
		<item name="colorIcon">@color/colorIconLight</item>

		<item name="colorSelected">@color/colorSelected</item>
		<item name="colorSelectedLight">@color/colorSelectedLight</item>
		<item name="textAppearanceBottomDrawerTitle">@style/TextAppearance.Drawer.Item.Title</item>
	</style>

	<style name="BaseBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
		<item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
	</style>

	<style name="TextAppearance.Drawer.Item.Title" parent="TextAppearance.MaterialComponents.Body2">
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>


</resources>